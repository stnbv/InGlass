<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">
    <!-- Логотипы -->
    <style name="LogoMobileService">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_160sdp</item>
        <item name="android:background">@drawable/logo_inglass</item>
    </style>

    <!-- Заголовки -->
    <style name="TitleScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <!-- Кнопки -->
    <style name="RoundButton">
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DefaultTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="startIconTint">@null</item>
    </style>

    <style name="DefaultTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!--Простой текст в TextView-->
    <style name="simpleText">
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>
