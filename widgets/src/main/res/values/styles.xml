<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <style name="TextView" parent="Widget.AppCompat.TextView" />

    <!-- TextView -->
    <style name="TextView.Title" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/times_new_roman</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="TextView.Text" parent="TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="TextView.Text.Black" parent="TextView.Text">
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="TextView.Text.Rounded" parent="TextView.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="TextView.BackgroundLayer" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_marginBottom">-30dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextView.BackgroundLayer.Bias" parent="TextView.BackgroundLayer">
        <item name="layout_constraintHorizontal_bias">0.333</item>
    </style>

    <!-- ImageView -->
    <style name="ImageView" parent="" />

    <style name="ImageView.State" parent="ImageView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@color/white</item>
    </style>

    <style name="ImageView.Projection" parent="ImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">98dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!-- Guideline -->
    <style name="Guideline" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Guideline.Vertical" parent="Guideline">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Guideline.Vertical.Start" parent="Guideline.Vertical">
        <item name="layout_constraintGuide_begin">18dp</item>
    </style>

    <style name="Guideline.Vertical.End" parent="Guideline.Vertical">
        <item name="layout_constraintGuide_end">18dp</item>
    </style>

</resources>